    <files id='haxe'>
        <compilerflag value='-DGLFW_INCLUDE_NONE'/>
        <compilerflag value='-I${GLFW_PATH}/lib/'/>
        <compilerflag value='-I${GLFW_PATH}/'/>
    </files>

    <files id='__main__'>
